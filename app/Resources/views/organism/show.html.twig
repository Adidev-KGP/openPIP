{% extends 'base.html.twig' %}

{% block body %}
    <h1>Organism</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ organism.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ organism.name }}</td>
            </tr>
            <tr>
                <th>Class</th>
                <td>{{ organism.class }}</td>
            </tr>
            <tr>
                <th>Scientfic_name</th>
                <td>{{ organism.scientficname }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ organism.description }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('admin_organism_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('admin_organism_edit', { 'id': organism.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
