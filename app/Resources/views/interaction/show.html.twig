{% extends 'base.html.twig' %}

{% block body %}
    <h1>Interaction</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ interaction.id }}</td>
            </tr>
            <tr>
                <th>Score</th>
                <td>{{ interaction.score }}</td>
            </tr>
            <tr>
                <th>Binding_start</th>
                <td>{{ interaction.bindingstart }}</td>
            </tr>
            <tr>
                <th>Binding_end</th>
                <td>{{ interaction.bindingend }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('interaction_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('interaction_edit', { 'id': interaction.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
