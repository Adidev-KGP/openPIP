{% extends 'base.html.twig' %}

{% block stylesheets %}
	<link rel="stylesheet" href="{{ asset('assets/css/bootstrap.min.css') }}">
	<link rel="stylesheet" href="{{ asset('assets/css/main.css') }}">
	<link rel="stylesheet" href="{{ asset('assets/css/home.css') }}">
{% endblock %}

{% block title %}TOR-IBIN | Home{% endblock %}

{% block content %}
<header>
	<nav class="navbar navbar-default home_header">
		<img  alt="" src="{{ asset('assets/images/home_logo.png') }}" class="logo left">
		<h3><strong>TOR-IBIN: The Online Resource for </br> Interface - Based Interaction Networks</strong></h3>
	</nav>
	<nav class="navbar navbar-default">
	  <div class="container-fluid">
	    <div class="navbar-header tor_ibin_header">
	        <h5 class="nav-header">TOR-IBIN Admin</h5>
		    <button type="button" class="navbar-toggle left" data-toggle="collapse" data-target="#myNavbar">
		        <span class="icon-bar"></span>
		        <span class="icon-bar"></span>
		        <span class="icon-bar"></span>
		    </button>
		 </div>  
		 <div id="myNavbar" class="collapse navbar-collapse">
		    <ul class="nav navbar-nav ">
		      <li class="active"><a href="{{ path('admin_home') }}">Home</a></li>
		      <li><a href="{{ path('search') }}">Search</a></li>
			</ul>
			<ul class="nav navbar-nav navbar-right">
			   <li><a href="{{ path('fos_user_security_login') }}">Login</a></li>
		    </ul>
		 </div>
	  </div>
	  <div class="shadow"></div>
	</nav>
</header>
<main>
	<div id="slideshow">
	   <div>
	     <img class="background_img" src="{{ asset('assets/images/background_img_1.png') }}">
	   </div>
	   <div>
	     <img class="background_img" src="{{ asset('assets/images/background_img_2.png') }}">
	   </div>
	   <div>
	     <img class="background_img" src="{{ asset('assets/images/background_img_3.png') }}">
	   </div> 
	   <div>
	     <img class="background_img" src="{{ asset('assets/images/background_img_4.png') }}">
	   </div>
	   <div>
	     <img class="background_img" src="{{ asset('assets/images/background_img_5.png') }}">
	   </div>
	      <div>
	     <img class="background_img" src="{{ asset('assets/images/background_img_6.png') }}">
	   </div>
	</div>
		<div>
	     <img class="background_img_2" src="{{ asset('assets/images/background_img_1.png') }}">
    </div>
	<div class="row">
		<div class="col-sm-9" style='padding: 0px;'>
			<div class="home_panel">	
				<div class="container">
					<div class="row db_content">
						<div class="col-lg-3 lefty">
						<span class='title'>Organisms</span><br/><span class='value'>{{ organism_count }}</span>
						</div>
						<div class="col-lg-3 centery">
						<span class='title'>Proteins</span><br/><span class='value'>{{ protein_count }}</span>
						</div> 
						<div class="col-lg-3 righty">
						<span class='title'>Interactions</span><br/><span class='value'>{{ interaction_count }}</span>
						</div>
						<div class="col-lg-3 righty">
						<span class='title'>Domains</span><br/><span class='value'>{{ domain_count }}</span>
						</div>
					</div>
					<div class="row">
						<div class="about">
							<span class="about_content"><p><strong>TOR-IBIN is an online resource for gathering and storing the published interface-based (IB) protein-protein 
							interaction networks (IN) predicted using any PPI prediction method. TOR-IBIN aims to make these networks
							available in a central repository with unified format and comprehensive search functions that maximize the 
							use of these data.</strong></p></span>
						</div>
					</div>	
					<div class="row">
						<div class="features">
							<h4>Features</h4>
							</br>
							<ul class="feature_list">
								<li>
									<h3>Search</h3>
									<p>Basic and Advanced Search options for individual proteins</p>
								</li>
								<li>
									<h3>Cytoscape Network Viewer</h3>
									<p>Network viewer allows for visulization of network data</p>
								</li>
								<li>
									<h3>Download Custom Datasets</h3>
									<p>Network data is available for download in PSI-MITAB and PSI-XML formats</p>
								</li>
							</ul>
						</div>
					</div>	
				</div>
			</div>
		</div>		
		<div class="col-sm-3">
			<div class="panel panel-default">
			    <div class="panel-heading" style="background-color: #5cb85c; color: #ffffff;">
			    	<strong>Announcements and News</strong>
				</div>
				<div class="panel-body announcement_panel">
					{% for announcement in announcements %}
			    		<div class="row">
							<div class="container announcement">
								<div class="row">
									<div class="announcement_header">
					            		<div class="announcement_title">
						            		<h4>{{ announcement.title }}</h4>
										</div>
									</div>
								</div>
								<div class="row">	
									<div class="announcement_date"> 
					             		<p><em>{% if announcement.date %}{{ announcement.date|date('Y-m-d') }}{% endif %}</em></p>
							        </div>	
								</div>		
								<div class="row">		
				                	<div class="announcement_text">
										{{ announcement.text | raw }}
									</div>
					        	</div>
						        <div class="row">
						        	<div class="read_more">
										<a href='announce/'>Read more...</a>
									</div>
						        </div>
					     	</div>
						</div>
			       	{% endfor %}
				 </div>
			</div>		
		</div>	
	</div>
</main>
{% endblock %}
{% block javascripts %}
{{ tinymce_init() }}


<script src="{{ asset('assets/js/jquery-2.1.4.min.jsv') }}"></script>
<script src="{{ asset('assets/js/bootstrap.min.js') }}"></script>
<script src="{{ asset('assets/js/home.js') }}"></script>
{% endblock %}