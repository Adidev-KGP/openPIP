{% extends 'base.html.twig' %}

{% block body %}
    <h1>File list</h1>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Method</th>
                <th>Description</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for file in files %}
            <tr>
                <td><a href="{{ path('admin_file_show', { 'id': file.id }) }}">{{ file.id }}</a></td>
                <td>{{ file.name }}</td>
                <td>{{ file.method }}</td>
                <td>{{ file.description }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('admin_file_show', { 'id': file.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('admin_file_edit', { 'id': file.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('admin_file_new') }}">Create a new entry</a>
        </li>
    </ul>
{% endblock %}
