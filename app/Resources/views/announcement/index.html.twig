{% extends 'base.html.twig' %}

{% block content %}
    <h1>Announcement list</h1>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Text</th>
                <th>Date</th>
                <th>Show</th>
                <th>Show_on_home_page</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for announcement in announcements %}
            <tr>
                <td><a href="{{ path('admin_announcement_show', { 'id': announcement.id }) }}">{{ announcement.id }}</a></td>
                <td>{{ announcement.title }}</td>
                <td>{{ announcement.text }}</td>
                <td>{% if announcement.date %}{{ announcement.date|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{% if announcement.show %}Yes{% else %}No{% endif %}</td>
                <td>{% if announcement.showonhomepage %}Yes{% else %}No{% endif %}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('admin_announcement_show', { 'id': announcement.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('admin_announcement_edit', { 'id': announcement.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('admin_announcement_new') }}">Create a new entry</a>
        </li>
    </ul>
{% endblock %}
