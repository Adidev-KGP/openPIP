{% extends 'base.html.twig' %}

{% block content %}
    <h1>Announcement</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ announcement.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ announcement.title }}</td>
            </tr>
            <tr>
                <th>Text</th>
                <td>{{ announcement.text }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{% if announcement.date %}{{ announcement.date|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Show</th>
                <td>{% if announcement.show %}Yes{% else %}No{% endif %}</td>
            </tr>
            <tr>
                <th>Show_on_home_page</th>
                <td>{% if announcement.showonhomepage %}Yes{% else %}No{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('admin_announcement_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('admin_announcement_edit', { 'id': announcement.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
