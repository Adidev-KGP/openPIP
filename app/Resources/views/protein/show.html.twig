{% extends 'base.html.twig' %}

{% block content %}
    <h1>Protein</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ protein.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ protein.name }}</td>
            </tr>
            <tr>
                <th>Sequence</th>
                <td>{{ protein.sequence }}</td>
            </tr>
            <tr>
                <th>Gene_name</th>
                <td>{{ protein.genename }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ protein.description }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('admin_protein_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('admin_protein_edit', { 'id': protein.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
