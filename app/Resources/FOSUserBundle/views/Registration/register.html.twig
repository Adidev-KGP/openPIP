{% extends "FOSUserBundle::layout.html.twig" %}



{% block title %}{{ short_title }} | Register{% endblock %}

{% block stylesheets %} 

    <link rel="stylesheet" href="{{ asset('assets/css/bootstrap.min.css') }}">
    <link rel="stylesheet" href="{{ asset('assets/css/jquery-ui.min.css') }}">
    <link rel="stylesheet" href="{{ asset('assets/css/jquery.qtip.css') }}">
    <link rel="stylesheet" href="{{ asset('assets/css/main.css') }}">
    <link rel="stylesheet" href="{{ asset('assets/css/data_manager.css') }}">

{% endblock %}

{% block fos_user_content %}
<header>
	<nav class="navbar navbar-default">
		<div class="container-fluid" style="padding: 0px;">
			{% if login_status == false %}
			<div class="navbar-header tor_ibin_header" >
				<h5 class="nav-header" style="color: {{ main_color_scheme }}">{{ short_title }}</h5>
				<button type="button" class="navbar-toggle right" data-toggle="collapse" data-target="#myNavbar" style="margin-left: 30px;" >
					<span class="icon-bar"></span> 
					<span class="icon-bar"></span> 
					<span class="icon-bar"></span>
				</button>
			</div>
			<div id="myNavbar" class="collapse navbar-collapse" style="padding-left: 0px;">
    				<ul class="nav navbar-nav ">
    					<li><a href="{{ path('home') }}">Home</a></li>
    					<li><a href="{{ path('search_results') }}">Search</a></li>
    					<li><a href="{{ path('download') }}">Downloads</a></li>
    					<li><a href="{{ path('about') }}">About</a></li>
    					<li><a href="{{ path('contact') }}">Contact</a></li>
    				</ul>
    				<ul class="nav navbar-nav navbar-right">
    					<li class="active"><a href="{{ path('user_register') }}">Register</a></li>
    					<li><a href="{{ path('fos_user_security_login') }}">Login</a></li>
    				</ul>
    			</div>
    		{% elseif login_status == true %}
    				<div class="navbar-header tor_ibin_header" >
						<h5 class="nav-header" style="color: {{ main_color_scheme }}">{{ short_title }} Admin</h5>
        				<button type="button" class="navbar-toggle right" data-toggle="collapse" data-target="#myNavbar" style="margin-left: 30px;" >
        					<span class="icon-bar"></span> 
        					<span class="icon-bar"></span> 
        					<span class="icon-bar"></span>
        				</button>
        			</div>
    			<div id="myNavbar" class="collapse navbar-collapse" style="padding-left: 0px;">
    				<ul class="nav navbar-nav ">
    					<li><a href="{{ path('admin_home') }}">Home</a></li>
    					<li><a href="{{ path('admin_search') }}">Search</a></li>
    					<li><a href="{{ path('admin_download') }}">Downloads</a></li>
    					<li><a href="{{ path('about') }}">About</a></li>
    					<li><a href="{{ path('contact') }}">Contact</a></li>
    					<li><a href="{{ path('announcement_manager') }}">Announcements</a></li>
    					<li><a href="{{ path('data_manager') }}">Data</a></li>
    					<li><a href="{{ path('file_manager', {'upload_directory': 'FASTA'}) }}">Files</a></li>
    					<li><a href="{{ path('admin_settings') }}">Settings</a></li>
    				</ul>
    				<ul class="nav navbar-nav navbar-right">
    					
    					<li><a href="{{ path('user_logout') }}">Logout</a></li>
    				</ul>
    			</div>
    			{% endif %}
		</div>
		<div class="shadow"></div>
	</nav>
</header>


<div class="container pannel" style="margin-top: 20px; max-width: 400px; background: #ffffff;">
    <div class="row" style="margin-top: 0px;">
		<div class="pannel_header" style="background-color: {{ main_color_scheme }}">
			<h4 style="color: {{ header_color_scheme }}">Register Admin</h4>
		</div>
	</div>	
    <div class="row pannel_content">
        {{ form_start(form, {'method': 'post', 'action': path('fos_user_registration_register'), 'attr': {'class': 'fos_user_registration_register'}}) }}
            {{ form_widget(form) }}
            <div>
                <input type="submit" class="btn btn-success" value="{{ 'Register'|trans }}" />
            </div>
        {{ form_end(form) }}
    </div>
</div>


{% endblock fos_user_content %}
